{
    "manifest_version": 3,
    "name": "Bookmark Accessor",
    "version": "1.0",
    "description": "Access and display saved bookmarks in Google Chrome",
    "permissions": [
      "bookmarks"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  